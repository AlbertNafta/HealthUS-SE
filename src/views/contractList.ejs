<%- include("partials/ad_sidebar.ejs"); %>
<%- include("partials/table.ejs"); %>
<div class="row">
  <div class="col-sm-3 col-md-6 col-lg-4 col-xl-2">
    <!-- Sidebar -->
  </div>

  <div class="col-sm-9 col-md-6 col-lg-8 col-xl-10" style="width:95%; padding-left: 20rem;">
    <br>
    <table id="example" class="table table-hover table-bordered table-responsive">
      <thead>
        <tr>
            <th>Hospital Name</th>
            <th>Content</th>
            <th>Email</th>
            <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% contract.forEach((cont)=>{%>
        <tr>
            <td><%= cont.hospitalName %></td>
            <td><%= cont.content %></td>
            <td><%= cont.contractEmail %></td>
          <td>
            <div class="row">
              <div class="col" style="max-width:10%;">
                <a href="contract/update/<%= cont._id%>" class="text-success">
                  <i class="fa-solid fa-pencil" style="margin-top: 0.5rem"></i>
                </a>
              </div>
              <div class="col">
                <form action="contract/delete/<%= cont._id %>?_method=DELETE" method="post">
                  <button type="submit" class="btn">
                    <i class="fa-solid fa-trash" style="color: #ff0000;"></i>
                  </button>
                </form>
              </div>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>