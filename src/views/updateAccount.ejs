<%- include("partials/ad_sidebar.ejs"); %>
<link rel="stylesheet" href="../../../public/css/admin.css">
<div class="row">
  <div class="col-sm-3 col-md-6 col-lg-4 col-xl-2">
    <!-- Sidebar -->
  </div>
  <div class="col-sm-9 col-md-6 col-lg-8 col-xl-10">
    <div class="container-xl px-4 mt-4">
      <div class="row">
        <div class="col-xl-4">
          <!-- Profile picture card-->
          <div class="card mb-4 mb-xl-0 w-100">
            <div class="card-header">Profile Picture</div>
            <div class="card-body text-center">
              <!-- Profile picture image-->
              <img class="img-account-profile rounded-circle mb-2" src="../../../public/images/ava_account_admin.jpg" alt="">
              <!-- Profile picture help block-->
              <div class="small font-italic text-muted mb-4">JPG or PNG no larger than 5 MB</div>
              <!-- Profile picture upload button-->
              <button class="btn btn-primary" type="button" for="customFile">Upload new image</button>
            </div>
          </div>
        </div>
        <div class="col-xl-8">
          <!-- Account details card-->
          <div class="card mb-4 w-100">
            <div class="card-header">Account Details</div>
            <div class="card-body">
              <form action="<%= account._id%>?_method=put" method="post">
                <div class="mb-3">
                  <label class="small mb-1" for="username">Username</label>
                  <input type="username" disabled="disabled" id="username" name="username" class="form-control form-control-lg" value="<%= account.username %>" required placeholder="Enter your username">
                </div>
                <div class="mb-3">
                  <label class="small mb-1" for="password1">Password</label>
                  <input type="password" id="password1" name="password" class="form-control form-control-lg" value="<%= account.password %>" required placeholder="Enter your password">
                </div>
                <div class="mb3">
                  <label class="small mb-1" for="email">Email</label>
                  <input type="email" id="email" name="email" class="form-control form-control-lg" value="<%= account.email %>" required placeholder="Enter your email">
                </div>
                <div class="mb-3">
                  <label class="small mb-1" for="floatingSelect">Role</label>
                  <select class="form-select" id="floatingSelect" name="role" aria-label="Floating label select example">
                    <option value="" disabled selected hidden><% if (account.role == '0') {%> Admin <%}
                        else if (account.role == '1') {%> Patient <%} 
                        else if (account.role == '2') {%> Hospital <%}%></option>
                    <option value="0"> Admin </option>
                    <option value="1"> Patient </option>
                    <option value="2"> Hospital </option>
                  </select>
                </div>
                <button class="btn btn-primary" type="submit">Update</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>