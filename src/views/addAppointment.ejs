<%- include("partials/ad_sidebar.ejs"); %>

<div class="row">
  <div class="col-sm-3 col-md-6 col-lg-4 col-xl-2">
    <!-- Sidebar -->

  </div>

  <div class="col-sm-9 col-md-6 col-lg-8 col-xl-10">
    <div class="container-xl px-4 mt-4">
      <div class="row">
        <div class="col-xl-4">
          <!-- Profile picture card-->
          <div class="card mb-4 mb-xl-0 w-100">
            <div class="card-header">Profile Picture</div>
            <div class="card-body text-center">
              <!-- Profile picture image-->
              <img class="img-account-profile rounded-circle mb-2" src="../../../public/images/appointment_ava_admin.png" alt="">
              <!-- Profile picture help block-->
              <div class="small font-italic text-muted mb-4">JPG or PNG no larger than 5 MB</div>
              <!-- Profile picture upload button-->
              <button class="btn btn-primary" type="button" for="customFile">Upload new image</button>
            </div>
          </div>
        </div>
        <div class="col-xl-8">
          <!-- Account details card-->
          <div class="card mb-4 w-100">
            <div class="card-header">Appointment Details</div>
            <div class="card-body">
              <form action="add" method="post">
                <div class="row gx-3 mb-3">
                  <div class="col-md-6">
                    <label class="small mb-1" for="appointmentID">Appointment ID</label>
                    <input type="text" id="appointmentID" name="appointmentID" class="form-control form-control-lg" placeholder="apm0000" required/>
                    <% if (locals.errorMessage) { %>
                      <div class="small text-danger"><%= errorMessage %></div>
                    <% } %>
                  </div>
                  <div class="col-md-6">
                    <label class="small mb-1" for="hospitalID">Hospital ID</label>
                    <input type="text" id="hospitalID" name="hospitalID" class="form-control form-control-lg" placeholder="hos0000" required/>
                  </div>
                </div>
                <div class="row gx-3 mb-3">
                  <div class="col-md-6">
                    <label class="small mb-1" for="patientID">Patient ID</label>
                    <input type="text" id="patientID" name="patientID" class="form-control form-control-lg" placeholder="pat0000" required/>
                  </div>
                  <div class="col-md-6">
                    <label class="small mb-1" for="profileID">Profile ID</label>
                    <input type="text" id="profileID" name="profileID" class="form-control form-control-lg" placeholder="prf0000" required/>
                  </div>
                </div>
                <div class="row gx-3 mb-3">
                  <div class="col-md-6">
                    <label class="small mb-1" for="doctorID">Doctor ID</label>
                    <input type="text" id="doctorID" name="doctorID" class="form-control form-control-lg" placeholder="doc0000" required />
                  </div>
                  <div class="col-md-6">
                    <label class="small mb-1" for="specialist">Specialist</label>
                    <input type="text" id="specialist" name="specialist" class="form-control form-control-lg"/>
                  </div>
                </div>
                <div class="row gx-3 mb-3">
                  <div class="col-md-6">
                    <label class="small mb-1" for="date">Date</label>
                    <input type="date" id="date" name="date" class="form-control form-control-lg"/>
                  </div>
                  <div class="col-md-6">
                    <label class="small mb-1" for="floatingSelect">Time</label>
                    <select class="form-select" id="floatingSelect" name="time" aria-label="Floating label select example">
                      <option selected>Choose a shift</option>
                      <option value="1">Shift 1</option>
                      <option value="2">Shift 2</option>
                      <option value="3">Shift 3</option>
                      <option value="4">Shift 4</option>
                    </select>
                  </div>
                </div>
                <button class="btn btn-primary" type="submit">Create</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>